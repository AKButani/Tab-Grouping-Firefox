{
    "description": "Allows you to group open tabs and save them for later use.",
  
    "manifest_version": 3,
    "name": "tab-grouping",
    "version": "1.0",
  
    "background": {
        "scripts": ["./static/js/background.js"]
    },

    "action": {
        "default_icon": "beasts-32.png",
        "default_title": "Groupify",
        "default_popup": "index.html"
    },
    "options_ui": {
        "page": "options.html"        
    },
  
    "permissions": ["contextMenus", "theme", "activeTab", "tabs", "storage", "bookmarks"]
}
  